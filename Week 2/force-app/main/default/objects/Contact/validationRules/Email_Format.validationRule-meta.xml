<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Email_Format</fullName>
    <active>true</active>
    <description>Ensures correct email format is used.</description>
    <errorConditionFormula>REGEX ( UPPER ( Email) ,&quot;^[A-Z0-9._%+-/!#$%&amp;&apos;*=?^_`{|}~]+@[A-Z0-9.-]+\\.[A-Z]{2,4}$&quot;)</errorConditionFormula>
    <errorDisplayField>Email</errorDisplayField>
    <errorMessage>Incorrect email format</errorMessage>
</ValidationRule>
