<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Number</fullName>
    <active>true</active>
    <description>Requires that phone number is entered.</description>
    <errorConditionFormula>!REGEX(Phone,&quot;^((\\+1)?\\s?\\(\\d{3}\\)\\s?\\d{3}\\-\\d{4})?$&quot;)</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Incorrect phone number</errorMessage>
</ValidationRule>
